{
  "name": "@aircarbon/stm",
  "private": true,
  "workspaces": [
    "stm",
    "orm"
  ],
  "scripts": {
    "postinstall": "cd orm && npm run build",
    "dev:ganache": "cd sol && npm run ganache",
    "dev:stm": "cd sol && export INSTANCE_ID=local && node process_sol_js && truffle migrate --network development --reset",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-productsway": "0.1.9",
    "husky": "^7.0.2",
    "lint-staged": ">=11.1.2",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solhint": "^3.3.7"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  }
}